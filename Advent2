            padding: 10px;
            box-sizing: border-box;
        }
        .calendar {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
            gap: 10px;
            width: 100%;
            max-width: 800px;
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        }
        .door {
            position: relative;
            width: 100%;
            padding-top: 100%;
            background: #8b0000;
            color: white;
            text-align: center;
            cursor: pointer;
            border: 2px solid #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            transition: transform 0.3s;
            overflow: hidden;
        }
        .door:hover {
            transform: scale(1.05);
        }
        .door.open {
            background: #fff;
            color: #000;
            cursor: default;
            transform: none;
        }
        .door-content {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 1.5em;
        }
        .door.open .door-content {
            display: none;
        }
        .door.open .door-reveal {
            display: block;
        }
        .door-reveal {
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            padding: 10px;
            text-align: center;
            overflow-y: auto;
        }
        .door-reveal img {
            max-width: 100%;
            height: auto;
            margin-bottom: 10px;
        }
        .door-reveal audio {
            width: 100%;
            margin-top: 10px;
        }
    </style>
